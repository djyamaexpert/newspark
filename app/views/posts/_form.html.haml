= form_for(@post) do |f|
  - if @post.errors.any?
    #error_explanation
      %h2
        = pluralize(@post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :url
    %br/
    = f.text_field :url
  .field
    = f.label :question
    %br/
    = f.text_area :question
  .field
    = f.label :about
    %br/
    = f.text_area :about
  .field
    = f.label :user_id
    %br/
    = f.number_field :user_id
  .actions
    = f.submit
